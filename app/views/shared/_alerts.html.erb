<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :title => "Dear", sticky: false, time: 3500) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :title => "Dear", sticky: false, time: 3500) %>
<% else %>
  <%= js add_gritter(flash[:notice], :title => "Dear", sticky: false, time: 3500) %>
<% end %>